<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Heroic Features - Start Bootstrap Template</title>

  <!-- Bootstrap core CSS -->
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="css/heroic-features.css" rel="stylesheet">

</head>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">Camiones San Isidro 639</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home
              <span class="sr-only">(current)</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">Sobre nosotros</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/servicios">Servicios</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contactos">Contactos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/signin">Inicio de Sesión</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/users/signup">Registrarse</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
      <h1 class="display-5" align="center">Registro</h1>
      <br>

      <div class="card-body">
          <form action="/users/signup" method="POST">
              <div class="form-group">
              <div class="col-sm-1" align="left">
                <label for="rName">Nombre</label>
                <input type="text" id="rName" name="rName" size="30px" value="{{rName}}">
              </div>
              <img class="rounded float-right" src="../img/3.jpg" alt="" width="350" height="330">
              <br>
              <div class="col-sm-2" align="left">
                <label for="rLast">Apellido</label>
                <input type="text" id="rLast" name="rLast" size="30px" value="{{rLast}}"> 
              </div>
              <br>
              <div class="col-sm-3" align="left">
                <label for="rEmail">Email</label>
                <input type="email" id="rEmail" name="rEmail" size="30px" value="{{rEmail}}">
              </div>
              <br>
              <div class="col-sm-4" align="left">
                  <label for="rUser">Usuario</label>
                  <input type="text" id="rUser" name="rUser" size="30px" value="{{rUser}}">
              </div>
              <br>
              <div class="col-sm-5" align="left">
                  <label for="rPass">Contraseña</label>
                  <br>
                  <input type="password" id="rPass" name="rPass" size="30px" value="{{rPass}}">
              </div>
              <br>
              <div class="col-sm-6" align="left">
                  <label for="rPass">Repetir contraseña</label>
                  <br>
                  <input type="password" id="rPass" name="crPass" size="30px" value="{{crPass}}">
              </div>
              <br>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
         
          </form>
          </div>
      </div>
    </header>

    <!-- Page Features -->
    <div class="row text-center">

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <!-- Footer -->
  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Zigmap 2020</p>
    </div>
    <!-- /.container -->
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>
